{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
    <style>
        .top-right {
            position: absolute;
            top: 20px;
            right: 20px;
            color: #46599C;
            text-align: center;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 10px;
            align-items: center;
        }

        .user-logo {
            width: 30px; /* Ajustez la taille du logo selon vos besoins */
            height: auto;
            margin-right: 10px;
        }
        .top-center {
          position: fixed;
          top: 20px; /* Adjust the distance from the top as needed */
          left: 10%;
          transform: translateX(-50%);
          color: #46599C;
          text-align: center;
          padding: 10px;
        }
    </style>
{% endblock %}

{% block body %}
                                   <!-- NAV BAR -->
    <div class="container">
        {% if app.user %}
            <div class="top-right">
                <img src="{{ asset('images/logInfirmier.jpg') }}" alt="Logo Utilisateur" class="user-logo">
                Vous êtes connecté en tant que {{ app.user.email }}!
               <a href="{{ path('app_logout') }}" class="logout-link">Déconnexion</a>
            </div>
            <h4 class="top-center">Bienvenue {{ app.user.lastName }}</h4>
        {% else %}
            <div class="top-right">
                <img src="{{ asset('images/logoUser.jpg') }}" alt="Logo Utilisateur" class="user-logo">
                Veuillez vous connecter.
                <a href="{{ path('app_login') }}" class="login-link">Connexion</a>
            </div>
        {% endif %}
    </div>
    <a href="{{ path('app_resident_new') }}" class="btn btn-success btn-lg mt-2 mb-2 ">
    Ajouter un résident
    </a>
    <a href="{{ path('app_observation_new') }}" class="btn btn-success btn-lg ">
    Ajouter une observation
    </a>
    <a href="{{ path('app_evenement_new') }}" class="btn btn-success btn-lg ">
    Ajouter un évènement
    </a> 
   

    <div class="container-fluid"> <!-- Ajout de la classe bg-dark pour une couleur foncée et text-light pour un texte clair -->          
        <div class="table-responsive">
            <table class="table table-bordered " 
            style="background:#D6FCFC"> <!-- Ajout de la classe table-bordered pour ajouter des bordures et table-dark pour un thème sombre -->
                <thead >
                    <tr>
                        {#<th scope="col">Id</th>#}
                        {#<th scope="col">Email</th>#}
                        {#<th scope="col">Roles</th>#}
                        {#<th scope="col">Password</th>#}
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Telephone</th>
                        {#<th scope="col">Address</th>
                        <th scope="col">Zip Code</th>
                        <th scope="col">City</th>#}
                        <th scope="col">NbChambre</th>
                        <th scope="col">Membre de famille</th>
                        <th scope="col">Actions</th>
                        <th scope="col">Agenda</th>
                        <th scope="col">Dossier médical</th>
                        <th scope="col">Observations</th>
                    </tr>
                </thead>
                
                <tbody>
                    {% if residents is empty %}
                        <tr>
                            <td colspan="12">Aucun enregistrement trouvé</td>
                        </tr>
                    {% else %}
                        {% for resident in residents %}
                            <tr>
                                {#<td>{{ resident.id }}</td>#}
                                {#<td>{{ resident.email }}</td>#}
                                {#<td>{{ resident.roles ? resident.roles|join(', ') : '' }}</td>#}
                                {# <td>{{ resident.password }}</td>#}
                                <td>{{ resident.firstName }}</td>
                                <td>{{ resident.lastName }}</td>
                                <td>{{ resident.telephone }}</td>
                                {#<td>{{ resident.address }}</td>
                                <td>{{ resident.zipCode }}</td>
                                <td>{{ resident.city }}</td>#}
                                <td>{{ resident.nbChambre }}</td>

                                {% if resident.membreFamille is not null %}
                                    <td>{{ resident.membreFamille.lastName }}</td>
                                {% else %}
                                    <td>Aucun membre de famille associé</td>
                                {% endif %}

                                <td>
                                    <a href="{{ path('app_resident_show', {'id': resident.id}) }}" class="btn btn-primary ">Afficher</a> <!-- Utilisation de la classe btn-lg pour un bouton plus grand -->
                                    <a href="{{ path('app_resident_edit', {'id': resident.id}) }}" class="btn btn-info ">Modifier</a>
                                </td>

                                <td>
                                <a href="{{ path('app_evenements_resident', {'id': resident.id}) }}" class="btn">
                                <img src="{{ asset('images/calendrierIcon.jpg') }}" alt="Voir agenda" width="50" height="50" style="border-radius:70%">
                                </a>
                                </td>
                                {#  dossier médical  #}
                                <td>
                                <a href="{{ path('app_dossier_medical_resident', {'id': resident.id}) }}" class="btn">
                                <img src="{{ asset('images/logoDossierMedical.png') }}" alt="Voir agenda" width="50" height="50" style="border-radius:70%">
                                </a>
                                </td>
                                <td>
                                <a href="{{ path('app_observations_resident', {'id': resident.id}) }}" class="btn">
                                <img src="{{ asset('images/logoObservation.jpg') }}" alt="Voir agenda" width="60" height="50" style="border-radius:70%">
                                </a>
                                </td>

                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
               
            </table>
        </div>

    </div>  
{% endblock %}
