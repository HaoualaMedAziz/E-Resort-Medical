{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
    <style>
        .top-right {
            position: absolute;
            top: 0;
            right: 0;
            color: #46599C;
            text-align: center;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 10px;
            align-items: center;
        }

        .user-logo {
            width: 30px; /* Ajustez la taille du logo selon vos besoins */
            height: auto;
            margin-right: 10px;
        }
        .top-center {
          position: fixed;
          top: 20px; /* Adjust the distance from the top as needed */
          left: 50%;
          transform: translateX(-50%);
          color: #46599C;
          text-align: center;
          padding: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        {% if app.user %}
            <div class="top-right">
                <img src="{{ asset('images/logoUser.jpg') }}" alt="Logo Utilisateur" class="user-logo">
                Vous êtes connecté en tant que {{ app.user.email }}!
               <a href="{{ path('app_logout') }}" class="logout-link">Déconnexion</a>
            </div>
            <h4 class="top-center">Page d'accueil</h4>
        {% else %}
            <div class="top-right">
                <img src="{{ asset('images/logoUser.jpg') }}" alt="Logo Utilisateur" class="user-logo">
                Veuillez vous connecter.
                <a href="{{ path('app_login') }}" class="login-link">Connexion</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
