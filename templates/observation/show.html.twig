{% extends 'base.html.twig' %}

{% block title %}Observation{% endblock %}

{% block body %}

    <h1>Observation</h1>

    <table class="table table-bordered " 
            style="background:#D6FCFC">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ observation.id }}</td>
            </tr>
            <tr>
                <th>Nom du résident</th>
                <td>{{ observation.resident.lastName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ observation.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ observation.createdAt ? observation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_observation_edit', {'id': observation.id}) }}" class="btn btn-success mt-2">Modifier</a> <br>

    <a href="{{ path('app_observation_index') }}" class="btn btn-secondary mt-2">Retour à la liste</a>


    {{ include('observation/_delete_form.html.twig') }}
{% endblock %}
