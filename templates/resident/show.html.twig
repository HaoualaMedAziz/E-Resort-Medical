{% extends 'base.html.twig' %}

{% block title %}Resident{% endblock %}

{% block body %}

    <h1>Resident</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ resident.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ resident.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ resident.roles ? resident.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ resident.password }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ resident.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ resident.lastName }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ resident.telephone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ resident.address }}</td>
            </tr>
            <tr>
                <th>ZipCode</th>
                <td>{{ resident.zipCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ resident.city }}</td>
            </tr>
            <tr>
                <th>NbChambre</th>
                <td>{{ resident.nbChambre }}</td>
            </tr>
            <tr>
                <th>Agenda</th>
                {# affichage de l'agenda#}
                                <td> {% if resident.agenda is empty %}
                                      Aucun agenda
                                     {% else %}
                                     {% for agenda in resident.agenda %}
                                     {{ agenda.typeEvenement }} : {{ agenda.description }}
                                     {# Ajoutez d'autres propriétés de l'agenda que vous souhaitez afficher #}
                                     {% if not loop.last %}| {% endif %}
                                     {% endfor %}
                                     {% endif %}
                                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_resident_index') }}">back to list</a>

    <a href="{{ path('app_resident_edit', {'id': resident.id}) }}">edit</a>

    {{ include('resident/_delete_form.html.twig') }}
{% endblock %}
